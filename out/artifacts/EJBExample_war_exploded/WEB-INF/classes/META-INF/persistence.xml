<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="MySqlDS123" transaction-type="JTA">
        <jta-data-source>java:/MySqlDS123</jta-data-source>
        <class>com.model.Book</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/BookManagement"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
